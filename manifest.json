{
  "manifest_version": 3,
  "name": "Url Rating",
  "description": "Extension that asks the user to rate the current website from a rating 1-5",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "hello_extensions.png"
  },
  "permissions": ["storage", "webNavigation", "scripting", "tabs", "webPermission"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "./scripts/background.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/show-rating.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
